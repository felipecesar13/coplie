# Server Configuration
PORT=3000
HOST=0.0.0.0

# Linear Configuration
LINEAR_WEBHOOK_SECRET=your_webhook_secret_here
# LINEAR_API_KEY is used both for the webhook service and the Linear MCP server
# For VPS environments without browser access, this API key enables authentication
# To generate an API key, go to Linear Settings → API → Personal API Keys
LINEAR_API_KEY=your_api_key_here

# Copilot CLI Configuration
COPILOT_CLI_PATH=gh copilot
COPILOT_TIMEOUT=30000

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
