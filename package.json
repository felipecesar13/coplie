{
  "name": "coplie",
  "version": "1.0.0",
  "description": "Linear webhook integration with Copilot CLI",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "bun run src/index.ts",
    "test": "bun test --env-file=.env.test",
    "test:watch": "bun test --watch --env-file=.env.test",
    "test:coverage": "bun test --coverage --env-file=.env.test",
    "lint": "bunx biome check .",
    "lint:fix": "bunx biome check --write .",
    "typecheck": "bunx tsc --noEmit",
    "postinstall": "npm install -g @github/copilot || echo 'Warning: Failed to install @github/copilot globally. You may need to run: npm install -g @github/copilot manually with appropriate permissions.'",
    "prepare": "husky"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.0.0",
    "@github/copilot": "0.0.419",
    "elysia": "^1.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.4.4",
    "@types/bun": "^1.0.0",
    "husky": "^9.1.7",
    "typescript": "^5.3.0"
  }
}
